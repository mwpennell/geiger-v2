citEntry(entry="Article",
	header="medusa",
	title = "Nine exceptional radiations plus high turnover explain species diversity in jawed vertebrates",
        author = personList(as.person("ME Alfaro"),
		as.person("F Santini"),
		as.person("C Brock"),
		as.person("H Alamillo"),
		as.person("A Dornburg"),
